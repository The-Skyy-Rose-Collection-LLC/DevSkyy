# DevSkyy Production Environment Configuration
# Created: 2024-12-29
# CRITICAL: All placeholder values MUST be replaced before deployment

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# ============================================================================
# WEB SERVER SETTINGS
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=8
CORS_ORIGINS=https://skyyrose.co,https://www.skyyrose.co

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://prod_user:CHANGE_THIS_PASSWORD@postgres:5432/devskyy_production
POSTGRES_DB=devskyy_production
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Connection pooling
DB_POOL_SIZE=30
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ============================================================================
# SECURITY SETTINGS (REQUIRED - Generate new values!)
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=GENERATE_NEW_SECRET_KEY_64_CHARS_MINIMUM
JWT_SECRET_KEY=GENERATE_NEW_JWT_SECRET_64_CHARS_MINIMUM
# Generate with: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
ENCRYPTION_MASTER_KEY=GENERATE_NEW_BASE64_32_BYTE_KEY

# Session configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE=7200

# CSRF protection
CSRF_ENABLED=true
CSRF_TOKEN_TIMEOUT=3600

# Security features
MFA_ENABLED=true
RATE_LIMIT_ENABLED=true
REQUEST_SIGNING_ENABLED=true
IP_WHITELIST_ENABLED=false

# ============================================================================
# LLM API KEYS (Production)
# ============================================================================
OPENAI_API_KEY=sk-REPLACE_WITH_PRODUCTION_KEY
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_PRODUCTION_KEY
GOOGLE_AI_API_KEY=REPLACE_WITH_PRODUCTION_KEY
MISTRAL_API_KEY=REPLACE_WITH_PRODUCTION_KEY
COHERE_API_KEY=REPLACE_WITH_PRODUCTION_KEY
GROQ_API_KEY=REPLACE_WITH_PRODUCTION_KEY

# LLM Configuration
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3
LLM_RATE_LIMIT_PER_MINUTE=120

# ============================================================================
# VECTOR STORE CONFIGURATION
# ============================================================================
# Pinecone
PINECONE_API_KEY=REPLACE_WITH_PRODUCTION_KEY
PINECONE_ENVIRONMENT=production
PINECONE_INDEX_NAME=devskyy-production

# Chroma (local fallback)
CHROMA_PERSIST_DIRECTORY=/app/data/chroma
CHROMA_COLLECTION_NAME=devskyy_production

# ============================================================================
# VISUAL GENERATION API KEYS
# ============================================================================
TRIPO3D_API_KEY=REPLACE_WITH_PRODUCTION_KEY
FASHN_API_KEY=REPLACE_WITH_PRODUCTION_KEY
GOOGLE_IMAGEN_API_KEY=REPLACE_WITH_PRODUCTION_KEY

# ============================================================================
# WORDPRESS/WOOCOMMERCE INTEGRATION (Production Site)
# ============================================================================
# Production URL: https://skyyrose.co
WORDPRESS_URL=https://skyyrose.co
WORDPRESS_USERNAME=REPLACE_WITH_ADMIN_USERNAME
WORDPRESS_APP_PASSWORD=REPLACE_WITH_APP_PASSWORD
WOOCOMMERCE_KEY=ck_REPLACE_WITH_PRODUCTION_KEY
WOOCOMMERCE_SECRET=cs_REPLACE_WITH_PRODUCTION_SECRET

# WordPress API settings
WP_AUTH_METHOD=app_password
WP_VERIFY_SSL=true
WP_TIMEOUT_SECONDS=30
WP_MAX_RETRIES=3
WP_RATE_LIMIT=120

# ============================================================================
# MONITORING & ALERTING
# ============================================================================
# Prometheus
PROMETHEUS_SCRAPE_INTERVAL=10s
PROMETHEUS_EVALUATION_INTERVAL=10s
PROMETHEUS_RETENTION_DAYS=90

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_PASSWORD
GRAFANA_ROOT_URL=https://skyyrose.co/grafana

# AlertManager
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK
PAGERDUTY_SERVICE_KEY=REPLACE_WITH_PRODUCTION_KEY
EMAIL_ALERT_TO=alerts@skyyrose.com

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_FORMAT=json
LOG_OUTPUT=/app/logs/devskyy.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=90

# Loki
LOKI_PUSH_URL=http://loki:3100/loki/api/v1/push
LOKI_RETENTION_PERIOD=90d

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_STORAGE=redis://redis:6379/2
RATE_LIMIT_DEFAULT=200/hour
RATE_LIMIT_AUTH=2000/hour
RATE_LIMIT_API=10000/day

# ============================================================================
# FILE STORAGE
# ============================================================================
UPLOAD_DIRECTORY=/app/uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,glb,gltf,usdz

# Cloud storage (recommended for production)
AWS_S3_BUCKET=skyyrose-production
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET
AWS_REGION=us-west-2

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=/app/data/backups

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_LLM_ROUND_TABLE=true
FEATURE_AB_TESTING=true
FEATURE_AUTO_DEPLOYMENT=true
FEATURE_3D_GENERATION=true
FEATURE_VISUAL_TRY_ON=true
FEATURE_RAG_SEARCH=true

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
ASYNC_WORKERS=8
TASK_QUEUE_MAX_SIZE=2000
CACHE_TTL_SECONDS=7200
CACHE_MAX_SIZE_MB=1024

# ============================================================================
# COMPLIANCE & PRIVACY
# ============================================================================
PII_PROTECTION_ENABLED=true
DATA_RESIDENCY=US
GDPR_COMPLIANCE=true
AUDIT_LOG_ENABLED=true

# ============================================================================
# HEALTHCHECK CONFIGURATION
# ============================================================================
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_RETRIES=3

# ============================================================================
# TIMEZONE & LOCALIZATION
# ============================================================================
TZ=America/Los_Angeles
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# ============================================================================
# DEPLOYMENT METADATA
# ============================================================================
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_DATE=
GIT_COMMIT_SHA=
BUILD_NUMBER=

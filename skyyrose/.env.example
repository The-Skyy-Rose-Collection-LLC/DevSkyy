# =============================================================================
# SkyyRose — Environment Configuration
# Copy to .env and fill in your values
# .env is gitignored — NEVER commit secrets
# =============================================================================

# -----------------------------------------------------------------------------
# AI Providers
# -----------------------------------------------------------------------------
# Anthropic (Claude) — avatar assistant, content generation
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI — embeddings (text-embedding-3-small), tool calling
OPENAI_API_KEY=sk-proj-...

# Google Gemini — product descriptions, alt text, scene backgrounds
GEMINI_API_KEY=AIza...

# -----------------------------------------------------------------------------
# WordPress / WooCommerce
# -----------------------------------------------------------------------------
WORDPRESS_URL=https://skyyrose.com
WC_CONSUMER_KEY=ck_...
WC_CONSUMER_SECRET=cs_...
WC_WEBHOOK_SECRET=        # Generate: openssl rand -hex 32

# -----------------------------------------------------------------------------
# Assistant API Server
# -----------------------------------------------------------------------------
ASSISTANT_PORT=3001
CORS_ORIGIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Analytics
# -----------------------------------------------------------------------------
GA4_MEASUREMENT_ID=G-...
GTM_CONTAINER_ID=GTM-...

# -----------------------------------------------------------------------------
# Storage (Cloudflare R2 — product images CDN)
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=skyyrose-assets
R2_PUBLIC_URL=https://cdn.skyyrose.com

# -----------------------------------------------------------------------------
# Email
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG...
EMAIL_FROM=hello@skyyrose.com

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
APP_ENV=development          # development | staging | production
NODE_ENV=development
IMAGE_BASE_URL=https://skyyrose.com/wp-content/uploads/products

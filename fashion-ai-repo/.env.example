# Fashion AI Repository - Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fashion_ai
DB_USER=fashion_user
DB_PASSWORD=fashion_password
DATABASE_URL=postgresql://fashion_user:fashion_password@localhost:5432/fashion_ai

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Queue Configuration
QUEUE_PREFIX=fashion_ai
QUEUE_TIMEOUT=300

# ML Configuration
ML_MODEL_PATH=./models
ML_DEVICE=cuda  # or cpu
CLIP_MODEL=ViT-B/32
DIFFUSION_MODEL=runwayml/stable-diffusion-v1-5

# Agent Configuration
AGENT_LOG_LEVEL=INFO
AGENT_RETRY_ATTEMPTS=3
AGENT_TIMEOUT=60

# Storage Paths
DATA_PATH=./data
LOG_PATH=./logs
BACKUP_PATH=./data/backups

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

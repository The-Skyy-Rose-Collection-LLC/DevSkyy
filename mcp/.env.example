# MCP Environment Configuration
# Copy this file to .env and update with your values

# Core MCP Settings
ENVIRONMENT=mcp
DEBUG=false
MCP_SERVER_NAME=devskyy
MCP_SERVER_VERSION=1.0.0

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Model Configuration
DEFAULT_MODEL=gpt-4o
FALLBACK_MODEL=gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.7
TOP_P=1.0
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# MCP Server Configuration
MCP_HOST=localhost
MCP_PORT=8002
MCP_WORKERS=1  # MCP servers typically run single-threaded

# Request Handling
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=60  # 1 minute
RETRY_ATTEMPTS=3
RETRY_DELAY=1  # seconds

# Tool Configuration
ENABLE_COMPLETION_TOOL=true
ENABLE_CODE_GENERATION_TOOL=true
ENABLE_VISION_ANALYSIS_TOOL=true
ENABLE_FUNCTION_CALLING_TOOL=true
ENABLE_MODEL_SELECTION_TOOL=true
ENABLE_AGENT_INTEGRATION_TOOL=true
ENABLE_CAPABILITIES_TOOL=true

# Security
API_KEY_VALIDATION=true
RATE_LIMITING=true
REQUESTS_PER_MINUTE=30
REQUESTS_PER_HOUR=500

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/mcp.log
MAX_LOG_SIZE=100MB
LOG_RETENTION_DAYS=30

# Caching
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000  # number of cached responses

# Database (lightweight)
DATABASE_URL=sqlite:///app/data/mcp.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30

# DevSkyy Integration
DEVSKYY_API_URL=http://localhost:8000
DEVSKYY_API_KEY=your-devskyy-api-key
AGENT_REGISTRY_URL=http://localhost:8000/api/agents

# Critical Fuchsia Ape Integration (Alternative Backend)
CRITICAL_FUCHSIA_APE_URL=https://critical-fuchsia-ape.fastmcp.app/mcp
CRITICAL_FUCHSIA_APE_KEY=your-critical-fuchsia-ape-api-key
MCP_BACKEND=critical-fuchsia-ape  # Options: 'devskyy' or 'critical-fuchsia-ape'

# SkyyRose Virtual Experiences (WordPress Local Development)
WORDPRESS_URL=http://localhost:8882
SKYYROSE_BLACK_ROSE_URL=http://localhost:8882/wp-content/plugins/skyyrose-virtual-experience/experiences/skyyrose-black-rose-final.html
SKYYROSE_LOVE_HURTS_URL=http://localhost:8882/wp-content/plugins/skyyrose-virtual-experience/experiences/skyyrose-love-hurts-final.html
SKYYROSE_SIGNATURE_URL=http://localhost:8882/wp-content/plugins/skyyrose-virtual-experience/experiences/skyyrose-signature-final.html

# Context Management
MAX_CONTEXT_LENGTH=32000
CONTEXT_WINDOW_OVERLAP=1000
ENABLE_CONTEXT_COMPRESSION=true

# Vision Analysis
VISION_MODEL=gpt-4o
MAX_IMAGE_SIZE=20MB
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Code Generation
CODE_MODEL=gpt-4o
MAX_CODE_LENGTH=10000
ENABLE_CODE_EXECUTION=false  # Security: disabled by default
SUPPORTED_LANGUAGES=python,javascript,typescript,html,css,sql

# Function Calling
FUNCTION_TIMEOUT=30  # seconds
MAX_FUNCTION_CALLS=10
ENABLE_NESTED_CALLS=true

# Model Selection
AVAILABLE_MODELS=gpt-4o,gpt-4o-mini,o1-preview,o1-mini
MODEL_SELECTION_STRATEGY=auto  # auto, manual, cost-optimized

# Agent Integration
MAX_AGENTS=6
AGENT_TIMEOUT=120  # 2 minutes
ENABLE_AGENT_CHAINING=true

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=8003
HEALTH_CHECK_INTERVAL=30  # seconds

# Error Handling
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your-sentry-dsn
ERROR_RETRY_LIMIT=3

# Development
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_TRACE_LOGGING=false

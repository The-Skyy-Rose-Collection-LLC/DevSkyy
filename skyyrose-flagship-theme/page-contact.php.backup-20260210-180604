function skyyrose_contact_enqueue() {
    wp_enqueue_style( 'contact-css', get_template_directory_uri() . '/assets/css/contact.css', array(), '1.0.0' );
    wp_enqueue_script( 'contact-js', get_template_directory_uri() . '/assets/js/contact.js', array(), '1.0.0', true );
}
add_action( 'wp_enqueue_scripts', 'skyyrose_contact_enqueue' );


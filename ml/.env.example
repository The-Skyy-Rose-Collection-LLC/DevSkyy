# ML Environment Configuration
# Copy this file to .env and update with your values

# Core Application
ENVIRONMENT=ml
DEBUG=false
SECRET_KEY=your-ml-secret-key

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Model Configuration
DEFAULT_MODEL=gpt-4o
FALLBACK_MODEL=gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.7

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=auto  # auto, cpu, cuda, mps

# Model Storage
MODEL_CACHE_DIR=/app/models
HUGGINGFACE_CACHE_DIR=/app/cache/huggingface
TRANSFORMERS_CACHE=/app/cache/transformers

# Memory Management
MAX_MEMORY_GB=8
BATCH_SIZE=32
GRADIENT_ACCUMULATION_STEPS=1

# Training Configuration
LEARNING_RATE=2e-5
NUM_EPOCHS=3
WARMUP_STEPS=500
WEIGHT_DECAY=0.01

# Inference Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300  # 5 minutes
MODEL_LOAD_TIMEOUT=600  # 10 minutes

# Vector Database
VECTOR_DB_TYPE=chromadb  # chromadb, faiss, pinecone
VECTOR_DB_PATH=/app/data/vectors
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=devskyy-ml
MLFLOW_ARTIFACT_ROOT=/app/data/mlflow

# Weights & Biases
WANDB_PROJECT=devskyy-ml
WANDB_ENTITY=your-wandb-entity
WANDB_API_KEY=your-wandb-api-key

# Data Processing
DATA_PATH=/app/data
PROCESSED_DATA_PATH=/app/data/processed
RAW_DATA_PATH=/app/data/raw

# Model Serving
MODEL_SERVER_HOST=0.0.0.0
MODEL_SERVER_PORT=8001
WORKERS=2

# Monitoring
LOG_LEVEL=INFO
METRICS_ENABLED=true
PROFILING_ENABLED=false

# Security
MODEL_ENCRYPTION_ENABLED=false
API_KEY_REQUIRED=true

# Performance
ASYNC_INFERENCE=true
BATCH_INFERENCE=true
MODEL_QUANTIZATION=false

# Agent Configuration
AGENT_TIMEOUT=120  # 2 minutes
MAX_AGENT_RETRIES=3
AGENT_MEMORY_LIMIT=2048  # MB

# Fashion Agent Specific
FASHN_API_KEY=your-fashn-api-key
FASHN_MODEL_VERSION=latest

# Tripo Agent Specific
TRIPO_API_KEY=your-tripo-api-key
TRIPO_MODEL_VERSION=latest

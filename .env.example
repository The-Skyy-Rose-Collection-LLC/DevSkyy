# DevSkyy Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
ENVIRONMENT=development
# DEBUG=false by default for security; set to true only during active development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Security (REQUIRED for production)
# =============================================================================
# Generate JWT key with: python -c "import secrets; print('JWT_SECRET_KEY=' + secrets.token_urlsafe(64))"
# Generate encryption key with: python -c "import secrets, base64; print('ENCRYPTION_MASTER_KEY=' + base64.b64encode(secrets.token_bytes(32)).decode())"
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-64-chars-minimum
ENCRYPTION_MASTER_KEY=your-base64-encoded-32-byte-encryption-key-for-aes256

# =============================================================================
# Database
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./devskyy.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/devskyy

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://app.devskyy.app,https://api.devskyy.app,https://staging.devskyy.com

# =============================================================================
# Frontend & API URLs
# =============================================================================
FRONTEND_URL=https://app.devskyy.app
API_URL=https://api.devskyy.app

# =============================================================================
# AI/ML APIs (optional)
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=...

# =============================================================================
# Payments - Stripe
# Get your API keys from: https://dashboard.stripe.com/apikeys
# =============================================================================
STRIPE_API_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# 3D Asset Generation - HuggingFace (PRIMARY - Recommended for quality)
# Get your token from: https://huggingface.co/settings/tokens
# Create a token with "Read" access for inference API
# =============================================================================
HF_TOKEN=hf_...
HF_HOME=./cache/huggingface

# HuggingFace 3D Models (used for asset enhancement)
# - Hunyuan3D 2.0: Best quality, production-grade
# - InstantMesh: Fast, good for previews
# - TripoSR: Balanced quality/speed
HF_3D_MODEL_PRIMARY=tencent/Hunyuan3D-2
HF_3D_MODEL_FALLBACK=stabilityai/TripoSR

# =============================================================================
# 3D Asset Generation - Tripo3D (FALLBACK)
# Get your API key from: https://www.tripo3d.ai/dashboard
# =============================================================================
TRIPO_API_KEY=your-tripo3d-api-key
TRIPO_API_BASE_URL=https://api.tripo3d.ai/v2
TRIPO_OUTPUT_DIR=./generated_assets/3d

# =============================================================================
# Virtual Try-On - FASHN
# Get your API key from: https://fashn.ai/dashboard
# =============================================================================
FASHN_API_KEY=your-fashn-api-key
FASHN_API_BASE_URL=https://api.fashn.ai/v1
FASHN_OUTPUT_DIR=./generated_assets/tryon

# =============================================================================
# WordPress/WooCommerce
# =============================================================================
WORDPRESS_URL=https://your-site.com
WORDPRESS_USERNAME=admin
WORDPRESS_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx
WOOCOMMERCE_KEY=ck_...
WOOCOMMERCE_SECRET=cs_...

# =============================================================================
# Caching (optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Email (optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# =============================================================================
# Klaviyo Email Marketing
# Get credentials from: https://www.klaviyo.com/account#api-keys-tab
# =============================================================================
KLAVIYO_PRIVATE_KEY=pk_xxxxxxxxxxxx
KLAVIYO_PUBLIC_KEY=pk_xxxxxxxxxxxx
KLAVIYO_LIST_ID=XXXXXX
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# Monitoring (optional)
# =============================================================================
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# Performance Optimization
# =============================================================================
# Embedding cache settings
EMBEDDING_CACHE_SIZE=1024

# HTTP response cache TTL (seconds)
RESPONSE_CACHE_TTL=300

# Vector search cache TTL (seconds)
VECTOR_SEARCH_CACHE_TTL=300

# Reranking cache TTL (seconds)
RERANKING_CACHE_TTL=1800

# Maximum parallel file ingestion workers
MAX_PARALLEL_INGESTION=5

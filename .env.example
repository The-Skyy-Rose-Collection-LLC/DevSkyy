# DevSkyy Environment Configuration Template
# Copy this file to .env and replace with actual values
# NEVER commit .env to git - it's in .gitignore

# =============================================================================
# API KEYS - Replace with your actual keys
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API
OPENAI_API_KEY=sk-your-key-here

# Hugging Face
HUGGING_FACE_TOKEN=hf_your_token_here

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# DevSkyy MCP Server
DEVSKYY_API_KEY=your-devskyy-api-key-here
DEVSKYY_API_URL=http://localhost:8000

# HuggingFace MCP (uses HUGGING_FACE_TOKEN above)

# =============================================================================
# DATABASE
# =============================================================================

DATABASE_URL=postgresql://user:password@localhost:5432/devskyy
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-min-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-encryption-key-here

# =============================================================================
# WORDPRESS INTEGRATION
# =============================================================================

# Skyy Rose Collection WordPress Site
WORDPRESS_SITE_URL=https://your-site.com
WORDPRESS_USERNAME=your-username
WORDPRESS_PASSWORD=your-password
WORDPRESS_APPLICATION_PASSWORD=your-app-password-here
WORDPRESS_API_KEY=your-wordpress-api-key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=False

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://cloud.arcade.dev

# Trusted Hosts (comma-separated)
TRUSTED_HOSTS=localhost,127.0.0.1,testserver

# =============================================================================
# ARCADE.DEV INTEGRATION
# =============================================================================

# Arcade GitHub OAuth (for AI platform integration)
ARCADE_CLIENT_ID=your-arcade-client-id
ARCADE_CLIENT_SECRET=your-arcade-client-secret
ARCADE_CALLBACK_URL=https://cloud.arcade.dev/api/v1/oauth/f4c6b_aps_arcade-github/callback

# =============================================================================
# GITHUB OAUTH (for development tools)
# =============================================================================

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

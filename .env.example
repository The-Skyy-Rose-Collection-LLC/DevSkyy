# DevSkyy Platform Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Security (REQUIRED for production)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
ENCRYPTION_MASTER_KEY=your-encryption-key-change-in-production

# =============================================================================
# Database
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./devskyy.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/devskyy

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# AI/ML APIs (optional)
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=...

# =============================================================================
# WordPress/WooCommerce
# =============================================================================
WORDPRESS_URL=https://your-site.com
WORDPRESS_USERNAME=admin
WORDPRESS_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx
WOOCOMMERCE_KEY=ck_...
WOOCOMMERCE_SECRET=cs_...

# =============================================================================
# Caching (optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Email (optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# Monitoring (optional)
# =============================================================================
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

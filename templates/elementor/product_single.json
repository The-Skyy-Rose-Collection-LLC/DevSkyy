{
  "title": "Product Single - SkyyRose PDP",
  "type": "single-product",
  "version": "0.4",
  "metadata": {
    "title": "Product Detail Page",
    "created_at": "2025-12-16",
    "generator": "DevSkyy ElementorTemplateGenerator",
    "brand": "SkyyRose",
    "elementor_version": "3.32+",
    "theme_compatibility": "Shoptimizer 2.9.0",
    "woocommerce_required": true
  },
  "settings": {
    "template": "elementor_header_footer",
    "hide_title": "yes"
  },
  "content": [
    {
      "id": "product_main",
      "elType": "section",
      "settings": {
        "layout": "boxed",
        "structure": "20",
        "background_color": "#0D0D0D",
        "padding": { "unit": "px", "top": 60, "bottom": 60 }
      },
      "elements": [
        {
          "id": "gallery_col",
          "elType": "column",
          "settings": { "_column_size": 55 },
          "elements": [
            {
              "id": "product_3d_viewer",
              "elType": "widget",
              "widgetType": "shortcode",
              "settings": {
                "shortcode": "[skyyrose_3d_viewer product_id=\"{{product_id}}\" height=\"500\"]",
                "css_classes": "product-3d-viewer"
              }
            },
            {
              "id": "product_gallery",
              "elType": "widget",
              "widgetType": "woocommerce-product-images",
              "settings": {
                "sale_flash": "yes",
                "gallery_layout": "thumbnails_below",
                "thumbnail_columns": "4"
              }
            },
            {
              "id": "virtual_tryon_btn",
              "elType": "widget",
              "widgetType": "button",
              "settings": {
                "text": "Virtual Try-On",
                "link": { "url": "#tryon-modal" },
                "align": "center",
                "button_type": "default",
                "background_color": "#333333",
                "text_color": "#F5F5F0",
                "border_color": "#D4AF37",
                "icon": { "value": "fas fa-camera" },
                "icon_position": "before"
              }
            }
          ]
        },
        {
          "id": "details_col",
          "elType": "column",
          "settings": { "_column_size": 45 },
          "elements": [
            {
              "id": "product_breadcrumb",
              "elType": "widget",
              "widgetType": "woocommerce-breadcrumb",
              "settings": {
                "text_color": "#666666",
                "link_color": "#D4AF37"
              }
            },
            {
              "id": "product_title",
              "elType": "widget",
              "widgetType": "woocommerce-product-title",
              "settings": {
                "title_color": "#F5F5F0",
                "typography_font_family": "Playfair Display",
                "typography_font_size": { "unit": "px", "size": 36 }
              }
            },
            {
              "id": "product_price",
              "elType": "widget",
              "widgetType": "woocommerce-product-price",
              "settings": {
                "price_color": "#D4AF37",
                "typography_font_size": { "unit": "px", "size": 28 }
              }
            },
            {
              "id": "product_rating",
              "elType": "widget",
              "widgetType": "woocommerce-product-rating",
              "settings": {
                "star_color": "#D4AF37",
                "star_size": { "unit": "px", "size": 16 }
              }
            },
            {
              "id": "product_short_desc",
              "elType": "widget",
              "widgetType": "woocommerce-product-short-description",
              "settings": {
                "description_color": "#CCCCCC"
              }
            },
            {
              "id": "size_guide_btn",
              "elType": "widget",
              "widgetType": "button",
              "settings": {
                "text": "Size Guide",
                "link": { "url": "#size-guide-modal", "is_external": false },
                "size": "sm",
                "button_type": "link",
                "text_color": "#D4AF37",
                "icon": { "value": "fas fa-ruler" }
              }
            },
            {
              "id": "product_add_to_cart",
              "elType": "widget",
              "widgetType": "woocommerce-product-add-to-cart",
              "settings": {
                "button_background": "#D4AF37",
                "button_color": "#0D0D0D",
                "button_hover_background": "#C9A227",
                "quantity_background": "#1A1A1A",
                "quantity_color": "#F5F5F0"
              }
            },
            {
              "id": "product_meta",
              "elType": "widget",
              "widgetType": "woocommerce-product-meta",
              "settings": {
                "text_color": "#666666",
                "link_color": "#D4AF37"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "product_tabs_section",
      "elType": "section",
      "settings": {
        "layout": "boxed",
        "background_color": "#1A1A1A",
        "padding": { "unit": "px", "top": 60, "bottom": 60 }
      },
      "elements": [
        {
          "id": "tabs_col",
          "elType": "column",
          "settings": { "_column_size": 100 },
          "elements": [
            {
              "id": "product_tabs",
              "elType": "widget",
              "widgetType": "woocommerce-product-data-tabs",
              "settings": {
                "tab_title_color": "#666666",
                "tab_active_title_color": "#D4AF37",
                "tab_content_color": "#F5F5F0",
                "tab_border_color": "#333333"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "reviews_section",
      "elType": "section",
      "settings": {
        "layout": "boxed",
        "background_color": "#0D0D0D",
        "padding": { "unit": "px", "top": 60, "bottom": 60 }
      },
      "elements": [
        {
          "id": "reviews_col",
          "elType": "column",
          "settings": { "_column_size": 100 },
          "elements": [
            {
              "id": "reviews_heading",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Customer Reviews",
                "header_size": "h3",
                "align": "center",
                "title_color": "#D4AF37",
                "typography_font_family": "Playfair Display"
              }
            },
            {
              "id": "reviews_widget",
              "elType": "widget",
              "widgetType": "woocommerce-product-reviews",
              "settings": {
                "review_text_color": "#F5F5F0",
                "review_author_color": "#D4AF37",
                "star_color": "#D4AF37"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "related_section",
      "elType": "section",
      "settings": {
        "layout": "boxed",
        "background_color": "#1A1A1A",
        "padding": { "unit": "px", "top": 60, "bottom": 60 }
      },
      "elements": [
        {
          "id": "related_col",
          "elType": "column",
          "settings": { "_column_size": 100 },
          "elements": [
            {
              "id": "related_heading",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Complete The Look",
                "header_size": "h3",
                "align": "center",
                "title_color": "#D4AF37",
                "typography_font_family": "Playfair Display"
              }
            },
            {
              "id": "related_products",
              "elType": "widget",
              "widgetType": "woocommerce-product-related",
              "settings": {
                "columns": "4",
                "product_title_color": "#F5F5F0",
                "product_price_color": "#D4AF37",
                "add_to_cart_background": "#D4AF37",
                "add_to_cart_color": "#0D0D0D"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "size_guide_modal",
      "elType": "section",
      "settings": {
        "css_classes": "size-guide-modal",
        "display": "none"
      },
      "elements": [
        {
          "id": "modal_content",
          "elType": "column",
          "settings": { "_column_size": 100 },
          "elements": [
            {
              "id": "size_table",
              "elType": "widget",
              "widgetType": "table",
              "settings": {
                "table_header": ["Size", "Bust", "Waist", "Hips"],
                "table_body": [
                  ["XS", "32\"", "24\"", "34\""],
                  ["S", "34\"", "26\"", "36\""],
                  ["M", "36\"", "28\"", "38\""],
                  ["L", "38\"", "30\"", "40\""],
                  ["XL", "40\"", "32\"", "42\""]
                ],
                "header_background": "#D4AF37",
                "header_color": "#0D0D0D",
                "cell_background": "#1A1A1A",
                "cell_color": "#F5F5F0"
              }
            }
          ]
        }
      ]
    }
  ],
  "responsive": {
    "tablet": { "product_main": { "structure": "10" } },
    "mobile": { "product_main": { "structure": "10" } }
  }
}

# DevSkyy Production Environment Configuration
# Copy this file to .env in production and fill in all values
# DO NOT commit .env to git - it contains secrets!

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO

# ============================================================================
# SECURITY - REQUIRED IN PRODUCTION
# ============================================================================
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=

# JWT Configuration
JWT_SECRET_KEY=  # Can be same as SECRET_KEY or different
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# DATABASE - REQUIRED
# ============================================================================
# PostgreSQL (Recommended for production)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/devskyy

# Alternative: Neon Serverless PostgreSQL
# NEON_DATABASE_URL=postgresql+asyncpg://user:password@host.neon.tech/devskyy

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ============================================================================
# REDIS - REQUIRED FOR CACHING
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50
REDIS_DEFAULT_TTL=3600

# ============================================================================
# AI SERVICES - AT LEAST ONE REQUIRED
# ============================================================================
# OpenAI
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# AI Configuration
AI_DEFAULT_MODEL=claude-sonnet-4-5
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# ============================================================================
# CORS & SECURITY
# ============================================================================
# Production domains (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
TRUSTED_HOSTS=yourdomain.com,api.yourdomain.com

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_CONTENT_LENGTH_MB=16
REQUEST_TIMEOUT_SECONDS=300
WORKER_COUNT=4
ENABLE_GZIP=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_FORMAT=json
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_DIR=logs
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5
LOG_SANITIZE_SENSITIVE=true

# ============================================================================
# MONITORING (Optional)
# ============================================================================
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry error tracking
# SENTRY_DSN=

# ============================================================================
# OPTIONAL INTEGRATIONS
# ============================================================================
# Stripe
# STRIPE_API_KEY=
# STRIPE_WEBHOOK_SECRET=

# WordPress
# SKYY_ROSE_SITE_URL=
# SKYY_ROSE_APP_PASSWORD=

# SFTP
# SKYY_ROSE_SFTP_HOST=
# SKYY_ROSE_SFTP_USERNAME=
# SKYY_ROSE_SFTP_PRIVATE_KEY=


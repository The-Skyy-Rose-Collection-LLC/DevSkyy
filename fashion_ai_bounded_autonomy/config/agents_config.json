  "inter_agent_communication": {
    "protocol": "local_queue",
    "message_format": "json",
    "encryption_required": true,
    "audit_all_messages": true,
    "max_message_size_kb": 10240,
    "queue_priority_levels": ["critical", "high", "medium", "low"],
    "message_retention_hours": 24
  },
  "approval_workflows": {
    "default_workflow": {
      "steps": [
        {
          "step": 1,
          "name": "agent_execution",
          "automatic": true
        },
        {
          "step": 2,
          "name": "result_validation",
          "automatic": true
        },
        {
          "step": 3,
          "name": "human_review",
          "automatic": false,
          "timeout_hours": 24
        },
        {
          "step": 4,
          "name": "implementation",
          "automatic": false
        }
      ]
    },
    "high_risk_workflow": {
      "steps": [
        {
          "step": 1,
          "name": "agent_proposal",
          "automatic": true
        },
        {
          "step": 2,
          "name": "risk_assessment",
          "automatic": true
        },
        {
          "step": 3,
          "name": "senior_review",
          "automatic": false,
          "required_approvers": 2,
          "timeout_hours": 48
        },
        {
          "step": 4,
          "name": "controlled_implementation",
          "automatic": false,
          "requires_backup": true
        }
      ]
    }
  },
  "governance": {
    "principles": [
      "Human oversight required for all material changes",
      "No self-modification or auto-deployment allowed",
      "All actions must be logged and auditable",
      "System must remain locally contained",
      "Improvements through analysis, not self-alteration"
    ],
    "operator_controls": {
      "emergency_stop": true,
      "manual_override": true,
      "audit_access": true,
      "configuration_lock": true
    }
  }
}

# DevSkyy Production Environment
# ================================
# Environment variables for app.devskyy.app

# Public API URL - used by Next.js client-side code
# This will be rewritten by next.config.js to proxy to the backend
NEXT_PUBLIC_API_URL=https://api.devskyy.app

# WebSocket URL - used for real-time connections
NEXT_PUBLIC_WS_URL=wss://api.devskyy.app

# Site URL - used for absolute URLs in meta tags, Open Graph, etc.
NEXT_PUBLIC_SITE_URL=https://app.devskyy.app

# Backend URL - used by Next.js rewrites to proxy API requests
# This is NOT exposed to the client, only used server-side
BACKEND_URL=https://devskyy.fly.dev

# Stack Auth (configure in Vercel dashboard)
# NEXT_PUBLIC_STACK_PROJECT_ID=your-project-id
# NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=pck_...
# STACK_SECRET_SERVER_KEY=ssk_...

# Feature Flags
NEXT_PUBLIC_ENABLE_3D_PIPELINE=true
NEXT_PUBLIC_ENABLE_ROUND_TABLE=true

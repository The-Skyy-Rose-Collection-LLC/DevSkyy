# Vercel Serverless Environment Configuration
# Copy this file to .env and update with your values

# Core Application
ENVIRONMENT=vercel
DEBUG=false
SECRET_KEY=your-vercel-secret-key
JWT_SECRET_KEY=your-jwt-secret-key

# Vercel Configuration
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=production
VERCEL_REGION=iad1

# Database (Serverless-friendly)
DATABASE_URL=postgresql://user:pass@host:5432/db?sslmode=require
# Alternative: Use Vercel Postgres
# POSTGRES_URL=postgres://default:password@host:5432/verceldb
# POSTGRES_PRISMA_URL=postgres://default:password@host:5432/verceldb?pgbouncer=true&connect_timeout=15
# POSTGRES_URL_NON_POOLING=postgres://default:password@host:5432/verceldb

# Redis (Serverless-friendly)
REDIS_URL=rediss://user:pass@host:6379
# Alternative: Use Vercel KV
# KV_URL=your-kv-url
# KV_REST_API_URL=your-kv-rest-api-url
# KV_REST_API_TOKEN=your-kv-rest-api-token

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# WordPress Integration
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your-wp-username
WORDPRESS_PASSWORD=your-wp-app-password

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Serverless Optimization
COLD_START_OPTIMIZATION=true
FUNCTION_TIMEOUT=30  # seconds (Vercel limit)
MAX_DURATION=30
MEMORY_SIZE=1024  # MB

# Caching
ENABLE_EDGE_CACHING=true
CACHE_CONTROL_MAX_AGE=3600  # 1 hour
STALE_WHILE_REVALIDATE=86400  # 24 hours

# Rate Limiting (Serverless-friendly)
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_WINDOW=60  # seconds
ENABLE_RATE_LIMITING=true

# Logging (Vercel-optimized)
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
LOG_RETENTION_DAYS=7

# File Storage (Use external service)
UPLOAD_PROVIDER=vercel_blob  # vercel_blob, s3, cloudinary
VERCEL_BLOB_READ_WRITE_TOKEN=your-blob-token
MAX_FILE_SIZE=4194304  # 4MB (Vercel limit)

# Email (Use external service)
EMAIL_PROVIDER=resend  # resend, sendgrid, ses
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com

# Analytics
ENABLE_ANALYTICS=true
VERCEL_ANALYTICS_ID=your-analytics-id

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_ERROR_REPORTING=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_MINIFICATION=true
BUNDLE_ANALYZER=false

# API Configuration
API_VERSION=v1
MAX_REQUEST_SIZE=1048576  # 1MB
ENABLE_API_DOCS=false  # Disable in production

# Session Management (Stateless)
SESSION_PROVIDER=jwt  # jwt only for serverless
SESSION_TIMEOUT=3600  # 1 hour

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=false

# Third-party Integrations
STRIPE_PUBLISHABLE_KEY=pk_your_stripe_key
STRIPE_SECRET_KEY=sk_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Content Delivery
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=https://static.yourdomain.com

# Security Headers
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

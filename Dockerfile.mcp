# DevSkyy MCP Server - Production Docker Image
# Multi-stage build for optimized image size
# Per Truth Protocol Rule #2: Pin versions

# =============================================================================
# Stage 1: Builder - Install dependencies
# =============================================================================
FROM python:3.11.9-slim-bookworm AS builder

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    make \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements files
COPY requirements_mcp.txt /tmp/
COPY requirements.txt /tmp/

# Install Python dependencies with secure versions
# SECURITY: Fixes CRITICAL CVEs per SECURITY_SCAN_REPORT_20251118.md
# - pip>=25.3: Fixes CVE-2025-8869 (path traversal)
# - cryptography>=46.0.3: Fixes CVE-2024-26130, CVE-2023-50782, CVE-2024-0727, GHSA-h4gh-qq45-vh27
# - setuptools>=78.1.1: Fixes CVE-2025-47273, CVE-2024-6345
RUN pip install --upgrade \
    "pip>=25.3" \
    "cryptography>=46.0.3,<47.0.0" \
    "setuptools>=78.1.1,<79.0.0" \
    wheel && \
    pip install -r /tmp/requirements_mcp.txt && \
    pip install -r /tmp/requirements.txt

# =============================================================================
# Stage 2: Runtime - Minimal production image
# =============================================================================
FROM python:3.11.9-slim-bookworm AS runtime

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PATH="/opt/venv/bin:$PATH" \
    DEVSKYY_ENV=production

# Install runtime dependencies only
RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv

# Create non-root user for security (Truth Protocol Rule #5)
RUN useradd -m -u 1000 -s /bin/bash devskyy && \
    mkdir -p /app /app/logs /app/data && \
    chown -R devskyy:devskyy /app

# Set working directory
WORKDIR /app

# Copy application code
COPY --chown=devskyy:devskyy . /app/

# Copy entrypoint script
COPY --chown=devskyy:devskyy docker/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# Switch to non-root user
USER devskyy

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Expose ports
# 8000: Main FastAPI application
# 3000: MCP gateway service
EXPOSE 8000 3000

# Set entrypoint
ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]

# Default command: Run MCP server
CMD ["mcp-server"]

# =============================================================================
# Metadata (OCI Image Spec)
# =============================================================================
LABEL org.opencontainers.image.title="DevSkyy MCP Server" \
      org.opencontainers.image.description="Multi-Agent AI Platform with MCP integration" \
      org.opencontainers.image.version="1.1.0" \
      org.opencontainers.image.vendor="DevSkyy Platform Team" \
      org.opencontainers.image.authors="DevSkyy Platform Team" \
      org.opencontainers.image.url="https://devskyy.com" \
      org.opencontainers.image.documentation="https://devskyy.com/docs/mcp" \
      org.opencontainers.image.source="https://github.com/The-Skyy-Rose-Collection-LLC/DevSkyy"

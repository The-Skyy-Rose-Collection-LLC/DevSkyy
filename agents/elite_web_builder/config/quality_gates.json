{
  "gates": {
    "build": {
      "enabled": true,
      "commands": {
        "php": "php -l {file}",
        "python": "python -m py_compile {file}",
        "javascript": "node --check {file}",
        "css": "stylelint {file}"
      }
    },
    "types": {
      "enabled": true,
      "commands": {
        "typescript": "tsc --noEmit",
        "python": "mypy {file} --ignore-missing-imports"
      }
    },
    "lint": {
      "enabled": true,
      "commands": {
        "python": "ruff check {file}",
        "javascript": "eslint {file}",
        "css": "stylelint {file}",
        "php": "phpcs --standard=WordPress {file}"
      }
    },
    "tests": {
      "enabled": true,
      "coverage_threshold": 80,
      "commands": {
        "python": "pytest {test_file} -v --cov",
        "javascript": "jest {test_file} --coverage",
        "php": "phpunit {test_file}"
      }
    },
    "security": {
      "enabled": true,
      "checks": [
        "no_hardcoded_secrets",
        "no_console_log",
        "no_eval",
        "no_innerHTML",
        "parameterized_queries"
      ]
    },
    "a11y": {
      "enabled": true,
      "max_violations": 0,
      "severity_threshold": "serious",
      "checks": [
        "axe_core",
        "contrast_ratio",
        "aria_attributes",
        "keyboard_navigation"
      ]
    },
    "perf": {
      "enabled": true,
      "thresholds": {
        "lighthouse_score": 80,
        "lcp_ms": 2500,
        "fid_ms": 100,
        "cls": 0.1,
        "max_bundle_kb": 250
      }
    },
    "diff": {
      "enabled": true,
      "max_files_changed": 20,
      "forbidden_patterns": [
        ".env",
        "credentials",
        "node_modules/",
        "__pycache__/"
      ]
    }
  },
  "global": {
    "fail_fast": false,
    "max_heal_attempts": 3
  }
}

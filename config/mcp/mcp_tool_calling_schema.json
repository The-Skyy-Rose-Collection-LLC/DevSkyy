  "monitoring": {
    "metrics": {
      "tool_invocations": {
        "type": "counter",
        "labels": ["tool_name", "agent", "status"]
      },
      "execution_duration": {
        "type": "histogram",
        "labels": ["tool_name", "agent"],
        "buckets": [0.1, 0.5, 1, 2, 5, 10, 30]
      },
      "token_usage": {
        "type": "gauge",
        "labels": ["agent", "model"]
      },
      "error_rate": {
        "type": "counter",
        "labels": ["tool_name", "error_type"]
      }
    },
    "logging": {
      "level": "INFO",
      "format": "json",
      "include_traces": true,
      "audit_trail": true
    },
    "alerting": {
      "error_threshold": 0.05,
      "latency_p95_threshold_seconds": 10,
      "token_budget_alert": 0.8
    }
  },

  "compliance": {
    "truth_protocol": {
      "enforced": true,
      "rules": [
        "never_guess_syntax",
        "pin_all_versions",
        "cite_standards",
        "state_uncertainty",
        "no_hardcoded_secrets",
        "rbac_enforcement",
        "input_validation",
        "test_coverage_90_percent",
        "document_everything",
        "no_skip_rule"
      ]
    },
    "security_baseline": {
      "encryption": "AES-256-GCM",
      "password_hashing": "Argon2id",
      "authentication": "OAuth2+JWT",
      "key_derivation": "PBKDF2"
    },
    "performance_slos": {
      "p95_latency_ms": 200,
      "error_rate_percent": 0.5,
      "secrets_in_repo": 0
    }
  }

# Test Environment Configuration
# DO NOT USE IN PRODUCTION

# Environment
ENVIRONMENT=test
TESTING=true

# Security (Test keys only)
JWT_SECRET_KEY=test-secret-key-32-characters-long!!
SECRET_KEY=test-secret-key-32-characters-long!!
JWT_ALGORITHM=HS256

# Database (SQLite for tests)
DATABASE_URL=sqlite:///./test_devskyy.db

# Redis (Test DB 15)
REDIS_URL=redis://localhost:6379/15
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=15

# AI Services (Mock keys)
ANTHROPIC_API_KEY=test-anthropic-key-1234567890
OPENAI_API_KEY=test-openai-key-1234567890
OPENAI_ORG_ID=test-org-id

# External Services (Disabled for tests)
MOCK_EXTERNAL_APIS=true
DISABLE_EXTERNAL_CALLS=true

# Auth0 (Mock)
AUTH0_DOMAIN=test.auth0.com
AUTH0_CLIENT_ID=test_client_id
AUTH0_CLIENT_SECRET=test_client_secret
AUTH0_AUDIENCE=test_audience

# Elasticsearch (Mock)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=test_devskyy

# Monitoring
SENTRY_DSN=
ENABLE_MONITORING=false

# Performance
MAX_WORKERS=2
RATE_LIMIT_PER_MINUTE=1000

# Testing
PYTEST_TIMEOUT=300
COVERAGE_THRESHOLD=90
